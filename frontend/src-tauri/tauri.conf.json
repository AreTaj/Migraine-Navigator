{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Migraine Navigator",
  "version": "0.2.6",
  "identifier": "com.migrainenavigator.app",
  "build": {
    "beforeDevCommand": "npm run web",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Migraine Navigator",
        "width": 1200,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/migraine-navigator-api"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../LICENSE"
    ]
  }
}